@model List<Taniguchi_Final_Project.Models.Customer>
@{
    ViewBag.Title = "All";
}

<h2>All Customers</h2>
<a href="/Customers/Upsert" class="btn btn-primary">Add a Customer</a>

<div class="row">
    <div class="col-md-3">
        <input id="textSearch" type="text" class="form-control" placeholder="Search..." />
    </div>
    <div class="col-md-9">
        <input type="button" class="button btn btn-info" value="Search" onclick="Sortable.Search();" />
    </div>
</div>

<table class="sortable table table-hover table-striped">
    <thead>
        <tr>
            <th onclick="Sortable.Sort(0)">ID</th>
            <th onclick="Sortable.Sort(1)">Name</th>
            <th onclick="Sortable.Sort(2)">Address</th>
            <th onclick="Sortable.Sort(3)">City</th>
            <th onclick="Sortable.Sort(4)">State</th>
            <th onclick="Sortable.Sort(5)">Zip Code</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
        <tr>
            <td>@customer.Id</td>
            <td>@customer.Name</td>
            <td>@customer.Address</td>
            <td>@customer.City</td>
            <td>@customer.State</td>
            <td>@customer.Zip_Code</td>
            <td>
                <a href="/Customers/Upsert/@customer.Id">Edit</a>
            </td>
        </tr>
        }
    </tbody>
</table>

<script>
    Sortable.baseUrl = "/Customers/All/";
</script>